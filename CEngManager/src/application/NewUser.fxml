<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="application.controllers.NewUserController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="10" right="40" bottom="40" left="20"/></padding>
     <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="550" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="550" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    
    <ImageView id="boxImage" GridPane.columnIndex="0" 
           GridPane.rowIndex="0" GridPane.columnSpan="1" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER">    
	   <image>
	      <Image url="@/application/assets/logo.png" />
	   </image>
	</ImageView> 
   
    <!-- Add Header Label -->
    <Label fx:id="greetingMessage" text="Adding a New User" GridPane.columnIndex="1" 
           GridPane.rowIndex="0" GridPane.columnSpan="1" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial Black" size="45"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>
    
 	<Label text="Username of the New User " GridPane.columnIndex="1" GridPane.rowIndex="1"> 
 	 <font>
            <Font size="20" ></Font>
        </font>
 	</Label>
 	
     <TextField fx:id="newUserName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
     
     <Label text="Password of the New User " GridPane.columnIndex="1" GridPane.rowIndex="3"> 
 	 <font>
            <Font size="20" ></Font>
        </font>
 	</Label>
 	
     <PasswordField fx:id="newUserPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
     
         <Button fx:id="newuserButton" text="Add User"
            prefWidth="200" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="9"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handleNewUserButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
    <Button fx:id="previousButton" text="Go Back"
            prefWidth="100" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="9"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handlePreviousButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
     <!-- Add Header Label -->
    <Label fx:id="aboutUs" text="The Elites" GridPane.columnIndex="0" 
           GridPane.rowIndex="10" GridPane.columnSpan="2" 
           GridPane.rowSpan="1" GridPane.halignment="RIGHT" >
        <font>
            <Font name="Arial Red" size="20" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="100" right="0" bottom="0" left="20"></Insets>
        </GridPane.margin>
    </Label>
   
</GridPane>
