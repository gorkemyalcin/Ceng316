<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.collections.*?>
<?import fxmltableview.*?>
<?import javafx.collections.*?> 
<?import javafx.scene.control.ComboBox?>
<GridPane fx:controller="application.controllers.AddCourseController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="10" right="40" bottom="40" left="20"/></padding>
   <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="550" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="550" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <ImageView id="boxImage" GridPane.columnIndex="0" 
           GridPane.rowIndex="0" GridPane.columnSpan="1" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER">    
	   <image>
	      <Image url="@/application/assets/logo.png" />
	   </image>
	</ImageView> 
   
    <!-- Add Header Label -->
    <Label fx:id="greetingMessage" text="Adding a New Course" GridPane.columnIndex="1" 
           GridPane.rowIndex="0" GridPane.columnSpan="1" 
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial Black" size="35"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>
    
 	<Label text="Course Code" GridPane.columnIndex="1" GridPane.rowIndex="1"> 
 	 <font>
            <Font size="20" ></Font>
        </font>
 	</Label>
 	 <Label text="Course Name" GridPane.columnIndex="1" GridPane.rowIndex="3"> 
 	  <font>
            <Font size="20" ></Font>
        </font>
 	 </Label>
     <Label text="Course Status" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <font>
            <Font size="20" ></Font>
        </font>
     </Label>
     <Label text="Course Instructor" GridPane.columnIndex="1" GridPane.rowIndex="7"> 
      <font>
            <Font size="20" ></Font>
        </font>
     </Label>
     <Button fx:id="addInstructorButton" text="Add an Instructor to this Course"
            prefWidth="250" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="9"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleAddInstructorButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
     <Label text="Course Assistant" GridPane.columnIndex="1" GridPane.rowIndex="10" > 
     <font>
            <Font size="20" ></Font>
        </font>
     </Label>
	<Button fx:id="addAssistantButton" text="Add an Assistant for this Course"
            prefWidth="250" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="12"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleAddAssistantButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
     <TextField fx:id="courseCode" GridPane.columnIndex="1" GridPane.rowIndex="2" />
     <TextField fx:id="courseName" GridPane.columnIndex="1" GridPane.rowIndex="4" />
     <ComboBox fx:id="status" GridPane.columnIndex="1" GridPane.rowIndex="6" />
     <TextField fx:id="courseInstructor" GridPane.columnIndex="1" GridPane.rowIndex="8" />
     <TextField fx:id="courseAssistant" GridPane.columnIndex="1" GridPane.rowIndex="11" />
    
         <Button fx:id="submitButton" text="Add Course"
            prefWidth="150" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="15"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handleSubmitButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
     <Button fx:id="previousButton" text="Go Back"
            prefWidth="100" prefHeight="30" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="15"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handlePreviousButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="0" left="0"></Insets>
        </GridPane.margin>
    </Button>
    
     <!-- Add Header Label -->
    <Label fx:id="aboutUs" text="The Elites" GridPane.columnIndex="0" 
           GridPane.rowIndex="16" GridPane.columnSpan="2" 
           GridPane.rowSpan="1" GridPane.halignment="RIGHT" >
        <font>
            <Font name="Arial Red" size="20" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="100" right="0" bottom="0" left="20"></Insets>
        </GridPane.margin>
    </Label>
   
</GridPane>
